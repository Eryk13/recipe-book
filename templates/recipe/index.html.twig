{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <div class="page-title-wrapper">
        <h1>Recipes</h1>
        <a class="btn btn-primary" href="{{ path('app_recipe_new') }}">Create new</a>
    </div>


    {% for recipe in recipes %}
            <a class="recipe-card" href="{{ path('app_recipe_show', {id: recipe.id}) }}">
                <h3>{{ recipe.title }}</h3>
                <div>
                {% for ingredient in recipe.recipeIngredients %}
                    <small class="text-list">{{ ingredient.ingredient.name }}</small>
                {% endfor %}
                </div>
            </a>
        {% endfor %}
{% endblock %}
